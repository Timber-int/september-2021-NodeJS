<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Document</title>
</head>
<body style="display: flex ; justify-content: center; flex-wrap: wrap;text-align: center">
<h3 style="width: 100%">Users</h3>
{{#each users}}
    <div style="width: 20%; border: 1px solid black;margin: 1px;text-align: left;padding: 2px">
        <div>First Name: {{this.firstName}}</div>
        <div>Last Name: {{this.lastName}}</div>
        <div>Email: {{this.email}}</div>
        <div>Password: {{this.password}}</div>
        <div>Age: {{this.age}}</div>
        <div>City: {{this.city}}</div>
        <form action="/users/{{this.id}}">
            <input type="submit" value="Information">
        </form>
    </div>
{{/each}}

</body>
</html>